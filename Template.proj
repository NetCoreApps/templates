<Project ToolsVersion="15.0">

  <PropertyGroup>
    <PackOutput Condition="'$(PackOutput)' == ''">src</PackOutput>
  </PropertyGroup>

  <ItemGroup>
    <TemplatePack Include="src" />
  </ItemGroup>

  <Target Name="Build">
    <Exec Command="dotnet pack &quot;./src/Templates.nuspec&quot; /p:Version=0.1 -NoDefaultExcludes -o" />
  </Target>
</Project>
