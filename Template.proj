<Project ToolsVersion="15.0">

  <PropertyGroup>
    <PackOutput Condition="'$(PackOutput)' == ''">src</PackOutput>
  </PropertyGroup>

  <ItemGroup>
    <TemplatePack Include="src" />
  </ItemGroup>

  <Target Name="Build">
    <Exec Command="nuget.exe pack &quot;..\src\Templates.nuspec&quot; -properties &quot;version=1.0&quot; -NoDefaultExcludes" WorkingDirectory=".\build" />
  </Target>
</Project>
