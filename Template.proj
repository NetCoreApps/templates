<Project ToolsVersion="15.0">

  <PropertyGroup>
    <PackOutput Condition="'$(PackOutput)' == ''">src</PackOutput>
  </PropertyGroup>

  <ItemGroup>
    <TemplatePack Include="src" />
  </ItemGroup>

  <Target Name="Build">
    <Exec Command="mono nuget.exe pack &quot;../src/Templates.nuspec&quot; -properties &quot;version=1.0&quot; -NoDefaultExcludes -o ../" WorkingDirectory="./build" />
  </Target>
</Project>
