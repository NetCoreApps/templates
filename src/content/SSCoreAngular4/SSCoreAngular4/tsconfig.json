{
  "compilerOptions": {
    "importHelpers": true,
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "wwwroot",
    "**/*-aot.ts"
  ]
}